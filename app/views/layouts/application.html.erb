<!DOCTYPE html>
<html>
  <head>
    <title>Flashcards</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <% if logged_in? %>
    <%= current_user.username %> | <%= link_to "Logout", logout_path, method: :delete %> | <%= link_to "Home", root_path %>
    <% else %>
    <%= link_to "Registration", register_path %> | <%= link_to "Login", login_path %> | <%= link_to "Home", root_path %>
    <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
